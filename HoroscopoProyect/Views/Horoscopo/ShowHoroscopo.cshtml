@model ShowHoroscopo
@{
    Layout = "_Layout";
}

<div class="container text-center">
    <h2>Hola @Model.Name, tu horóscopo para hoy dice:</h2>
    <hr />
    <br />
    <img src="@Model.Icon" alt="@Model.Sign" class="img-fluid" style="max-width: 150px; height: auto;">
    <br />
    <br />
    <p>@Model.Prediction</p>
    <p>Faltan @Model.DaysUntilBirthday días para tu cumpleaños.</p>

    <form method="post" action="@Url.Action("Index", "Home")">
        <button type="submit" class="btn btn-primary" style="background-color: #fe6d1a;">Continuar</button>
    </form>
</div>
